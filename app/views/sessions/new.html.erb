<div class="sessions_form">
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
      <% end %>

  <%= form_tag do %>
  <fieldset>
    <h3>Please Log In</h3>

    <div>
      <label for="name">Name:</label>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div>
      <label for="password">Password:</label>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="submit">
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
      <% end %>
</div>


<h1>Listing Shows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Day</th>
    <th>Stage</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>

    <td><%= show.name %></td>
    <% if(show.day.nil?) %>
        <td></td>
    <% else %>
        <td><%= show.day.date %></td>
    <% end %>
    <td><%= show.stage.name %></td>
    <td><%= show.description %></td>

    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

